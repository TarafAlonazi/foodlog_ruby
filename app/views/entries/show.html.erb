<% content_for :title do %>
  <%= @entry.meal_type %> &ndash; <%= DateTime.now %>
<% end %>


<div class="columns mt-6 is-centered">
    <div class="column is-one-quarter">
      <nav class="panel is-primary">
        <p class="panel-heading">
          <%= @entry.meal_type %>
          | <%= @entry.category.title %>
        </p>
        <div class="panel-block">
          Calories: <%= @entry.calories %>
        </div>
        <div class="panel-block">
          Proteins: <%= @entry.proteins %>g
        </div>
        <div class="panel-block">
          Carbohydrates: <%= @entry.carbohydrates %>g
        </div>
        <div class="panel-block">
          Fats: <%= @entry.fats %>g
        </div>
      </nav>
      <div class="columns is-mobile">
        <div class="column">
          <%= link_to "Edit", edit_entry_path(@entry), class:"button is-gray"%>
          <%= link_to "Delete", entry_path(@entry), method: :delete, data: {confirm: 'Are you sure?'}, class:"button is-gray" %>
        </div>
      </div>
    </div>
</div>
