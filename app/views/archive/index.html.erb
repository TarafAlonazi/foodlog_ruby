<div class="column is-centered mt-6">
    <div class="column is-half">
        <% @entires.each do |day, entires| %>
            <h3 class="is-size-4 has-text-weight-bold mb-4 has-text-centered">Entires for <%= day %></h3>
            <nav class="level is-mobile">
                <div class="level-item has-text-centered">
                    <div>
                        <p class="heading">Calories</p>
                        <p class="title"><%= entires.pluck(:calories).sum %>kcal</p>
                    </div>
                </div>
                <div class="level-item has-text-centered">
                    <div>
                        <p class="heading">Proteins</p>
                        <p class="title"><%= entires.pluck(:proteins).sum %>g</p>
                    </div>
                </div>
                <div class="level-item has-text-centered">
                    <div>
                        <p class="heading">Carbohydrates</p>
                        <p class="title"><%= entires.pluck(:carbohydrates).sum %>g</p>
                    </div>
                </div>
                <div class="level-item has-text-centered">
                    <div>
                        <p class="heading">Fats</p>
                        <p class="title"><%= entires.pluck(:fats).sum %>g</p>
                    </div>
                </div>
            </nav>
            <% entires.each do |entry| %>
                <%= link_to entry_path(entry) do %>
                    <div class="card">
                        <div class="card-content">
                            <strong><%= entry.meal_type %></strong><br/>
                            <%= entry.calories %> calories,
                            <%= entry.proteins %> g proteins,
                            <%= entry.carbohydrates %> g carbohydrates,
                            <%= entry.fats %> g fats
                        <div>
                    </div>
                <% end %>
            <% end %>
        <% end %>
    </div>
</div>